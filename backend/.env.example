# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings

# Environment Mode (development/production)
ENVIRONMENT=development
USE_S3_STORAGE=False
USE_CONTENT_MODERATION=False

# Database Configuration
DATABASE_HOST=db
DATABASE_NAME=style_transfer_db
DATABASE_USER=django_user
DATABASE_PASSWORD=django_password
DATABASE_PORT=3306

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
AWS_DEFAULT_ACL=private
AWS_S3_OBJECT_PARAMETERS={
    'CacheControl': 'max-age=86400',
}

# Amazon Rekognition Configuration
AWS_REKOGNITION_REGION=us-east-1
CONTENT_MODERATION_CONFIDENCE_THRESHOLD=80.0
ALLOWED_MODERATION_LABELS=Suggestive,Female_Swimwear_Or_Underwear,Male_Swimwear_Or_Underwear

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Brevo Email Verification (optional)
# Use these if you want to send verification codes via Brevo/Sendinblue
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM_ADDRESS=no-reply@splashmy.app
EMAIL_FROM_NAME=SplashMy
# Optional transactional template ID if using Brevo templates
EMAIL_VERIFICATION_TEMPLATE_ID=
# Verification settings
EMAIL_VERIFICATION_CODE_TTL_MINUTES=10
EMAIL_VERIFICATION_MAX_ATTEMPTS=5
EMAIL_VERIFICATION_RESEND_COOLDOWN_SECONDS=60

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Rate Limiting
DAILY_UPLOAD_LIMIT_FREE=10
DAILY_UPLOAD_LIMIT_PREMIUM=100

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
